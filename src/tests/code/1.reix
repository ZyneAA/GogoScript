fn fib(n) {

    let a = 0;
    let b = 1;
    loop (let i = 0..n) {
        let tmp = a;
        a = b;
        b = tmp + b;
    }
    return a;

}

fn rec_fib(n) {

    if (n <= 1) return n;
    return rec_fib(n - 1) + rec_fib(n -2);

}

fn both_fib_call() {
    println "iterative: " + fib(10) + "\nrecursive: " + fib(10) + "\n";
}

// Entry point
fn main() {

    // allocating 10 bytes of memory
    let alloc = _M_alloc(100);
    println alloc;

    // writing to memory blocks manually
    _M_write(alloc, 0, false);
    _M_write(alloc, 8, "hello mate");

    let get_0 = _M_read(alloc, 0, 1, true);
    let get_1 = _M_read(alloc, 8, 10, false);

    // printing out values
    println "the allocated value: " + get_0;
    println "the allocated value: " + get_1;

    // free allocated memory
    let a = 12..90;
    _M_free(alloc, a);

    println "time spent executing both fib: " + _C_measure(both_fib_call) + "\n";
    println "current time: " + _C_format_time();

}

println "total time spent executing: " + _C_measure(main);

